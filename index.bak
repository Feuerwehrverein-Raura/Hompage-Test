                                        <div id="other-address-field" class="hidden ml-6">
                                            <input type="text" id="member-other-address" placeholder="Andere Adresse/E-Mail" class="w-full px-3 py-2 rounded-lg bg-white bg-opacity-20 border border-white border-opacity-30 text-white placeholder-fire-200 focus:outline-none focus:ring-2 focus:ring-white text-sm">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Normale Nachricht (nur bei anderen Betreff-Optionen sichtbar) -->
                        <div id="general-message" class="hidden">
                            <textarea id="contact-message" rows="4" placeholder="Nachricht" class="w-full px-4 py-3 rounded-lg bg-white bg-opacity-20 border border-white border-opacity-30 text-white placeholder-fire-200 focus:outline-none focus:ring-2 focus:ring-white resize-none"></textarea>
                        </div>
                        
                        <button type="submit" class="w-full bg-white text-fire-700 px-6 py-3 rounded-lg font-semibold hover:bg-fire-50 transition-colors flex items-center justify-center space-x-2">
                            <span>üìß</span>
                            <span>E-Mail senden</span>
                        </button>
                    </form>
