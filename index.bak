    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8">
        <div class="container mx-auto px-4 text-center">
            <div class="flex items-center justify-center mb-4">
                <div class="w-10 h-10 rounded-full overflow-hidden border-2 border-fire-300 mr-3 bg-white">
                    <img src="images/logo.png" alt="Feuerwehrverein Raura Logo" class="w-full h-full object-contain p-1">
                </div>
                <div>
                    <h3 class="text-lg font-bold">Feuerwehrverein Raura Kaiseraugst</h3>
                </div>
            </div>
            <p class="text-gray-400 mb-4">Tradition ‚Ä¢ Kameradschaft ‚Ä¢ Gemeinschaft</p>
            <div class="border-t border-gray-700 pt-4 text-sm text-gray-500">
                <p>&copy; 2024 Feuerwehrverein Raura Kaiseraugst. Alle Rechte vorbehalten.</p>
            </div>
        </div>
    </footer>

    <script>
        console.log('üî• Feuerwehrverein Raura - Website gestartet');

        class VorstandManager {
            constructor() {
                this.vorstandMembers = [];
                this.retryCount = 0;
                this.maxRetries = 3;
                this.init();
            }

            async init() {
                console.log('üìã Initialisiere Vorstand-System...');
                
                try {
                    await this.loadVorstandMembers();
                    if (this.vorstandMembers.length > 0) {
                        this.renderVorstand();
                    } else {
                        console.warn('‚ö†Ô∏è Keine Vorstandsmitglieder geladen - zeige Fallback');
                        this.showFallback();
                    }
                } catch (error) {
                    console.error('‚ùå Fehler beim Initialisieren:', error);
                    this.showError();
                }
            }

            async loadVorstandMembers() {
                const memberFiles = [
                    'vorstand/praesident.md',
                    'vorstand/aktuar.md', 
                    'vorstand/kassier.md',
                    'vorstand/materialwart.md',
                    'vorstand/beisitzer.md'
                ];

                console.log('üìÇ Lade Markdown-Dateien:', memberFiles);

                const promises = memberFiles.map(async (file, index) => {
                    try {
                        console.log(`üìÑ Lade: ${file}`);
                        const response = await fetch(file);
                        
                        if (!response.ok) {
                            console.warn(`‚ö†Ô∏è ${file}: HTTP ${response.status} ${response.statusText}`);
                            return null;
                        }
                        
                        const content = await response.text();
                        console.log(`‚úÖ ${file}: ${content.length} Zeichen geladen`);
                        
                        if (!content.trim()) {
                            console.warn(`‚ö†Ô∏è ${file}: Datei ist leer`);
                            return null;
                        }
                        
                        const member = this.parseMarkdownMember(content, file);
                        if (member) {
                            console.log(`üë§ Parsed: ${member.name} (${member.position})`);
                            return member;
                        } else {
                            console.warn(`‚ö†Ô∏è ${file}: Konnte nicht geparst werden`);
                            return null;
                        }
                        
                    } catch (error) {
                        console.error(`‚ùå Fehler beim Laden von ${file}:`, error);
                        return null;
                    }
                });

                const results = await Promise.allSettled(promises);
                this.vorstandMembers = results
                    .filter(result => result.status === 'fulfilled' && result.value !== null)
                    .map(result => result.value)
                    .sort((a, b) => (a.order || 999) - (b.order || 999));

                console.log(`üéØ ${this.vorstandMembers.length} Vorstandsmitglieder erfolgreich geladen:`, 
                    this.vorstandMembers.map(m => `${m.name} (${m.position})`));
            }

            parseMarkdownMember(content, filename = '') {
                try {
                    const patterns = [
                        /^---\r?\n([\s\S]*?)\r?\n---\r?\n([\s\S]*)$/,
                        /^---\r?\n([\s\S]*?)\r?\n---\r?\n?$/,
                        /^([\s\S]*?)\r?\n---\r?\n([\s\S]*)$/
                    ];

                    let frontmatterMatch = null;
                    for (const pattern of patterns) {
                        frontmatterMatch = content.match(pattern);
                        if (frontmatterMatch) break;
                    }

                    if (!frontmatterMatch) {
                        console.warn(`‚ö†Ô∏è ${filename}: Kein Frontmatter gefunden`);
                        return null;
                    }

                    const [, frontmatterStr, description = ''] = frontmatterMatch;
                    const frontmatter = this.parseFrontmatter(frontmatterStr);
                    
                    if (!frontmatter.name || !frontmatter.position) {
                        console.warn(`‚ö†Ô∏è ${filename}: Pflichtfelder fehlen`);
                        return null;
                    }
                    
                    return {
                        ...frontmatter,
                        description: description.trim(),
                        _source: filename
                    };
                    
                } catch (error) {
                    console.error(`‚ùå ${filename}: Parse-Fehler:`, error);
                    return null;
                }
            }

            parseFrontmatter(frontmatterStr) {
                const result = {};
                const lines = frontmatterStr.split(/\r?\n/).filter(line => line.trim());
                
                for (const line of lines) {
                    if (line.trim().startsWith('#') || !line.trim()) continue;
                    
                    const colonIndex = line.indexOf(':');
                    if (colonIndex === -1) continue;
                    
                    const key = line.substring(0, colonIndex).trim();
                    let value = line.substring(colonIndex + 1).trim();
                    
                    if (!key) continue;
                    
                    if ((value.startsWith('"') && value.endsWith('"')) || 
                        (value.startsWith("'") && value.endsWith("'"))) {
                        value = value.slice(1, -1);
                    }
                    
                    if (key === 'order' && !isNaN(value) && value !== '') {
                        value = parseInt(value);
                    }
                    
                    result[key] = value;
                }
                
                return result;
            }

            renderVorstand() {
                const container = document.getElementById('vorstand-container');
                const loading = document.getElementById('vorstand-loading');
                const error = document.getElementById('vorstand-error');
                const fallback = document.getElementById('vorstand-fallback');
                
                [loading, error, fallback].forEach(el => el?.classList.add('hidden'));
                
                if (this.vorstandMembers.length === 0) {
                    this.showFallback();
                    return;
                }

                container.classList.remove('hidden');
                container.innerHTML = this.vorstandMembers.map(member => this.createMemberHTML(member)).join('');
            }

            createMemberHTML(member) {
                const fallbackImage = member.name ? member.name.charAt(0).toUpperCase() : '?';
                const email = member.email || '';
                const phone = member.phone || '';
                const image = member.image || '';
                const description = member.description || '';
                
                return `
                    <div class="flex items-center gap-4 border-l-4 border-fire-500 pl-4 hover:bg-gray-50 rounded-md transition-colors p-2" 
                         ${description ? `title="${description}"` : ''}>
                        <div class="relative">
                            ${image ? `
                                <img src="${image}" alt="${member.name}" class="w-12 h-12 rounded-full object-cover border-2 border-gray-200" 
                                     onload="this.nextElementSibling.style.display='none';"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            ` : ''}
                            <div class="w-12 h-12 rounded-full bg-fire-500 text-white flex items-center justify-center font-bold text-lg border-2 border-gray-200" 
                                 style="display: ${image ? 'none' : 'flex'};">
                                ${fallbackImage}
                            </div>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="font-semibold text-gray-800 truncate">${member.name}</p>
                            <p class="text-fire-600 text-sm">${member.position}</p>
                            ${email ? `
                                <a href="mailto:${email}" class="text-xs text-gray-600 hover:text-fire-600 transition-colors block truncate">
                                    ‚úâ ${email}
                                </a>
                            ` : ''}
                            ${phone ? `
                                <a href="tel:${phone.replace(/\s/g, '')}" class="text-xs text-gray-600 hover:text-fire-600 transition-colors block">
                                    ‚òé ${phone}
                                </a>
                            ` : ''}
                        </div>
                    </div>
                `;
            }

            showError() {
                const loading = document.getElementById('vorstand-loading');
                const error = document.getElementById('vorstand-error');
                const container = document.getElementById('vorstand-container');
                const fallback = document.getElementById('vorstand-fallback');
                
                [loading, container, fallback].forEach(el => el?.classList.add('hidden'));
                error?.classList.remove('hidden');
                
                const retryBtn = document.getElementById('retry-vorstand');
                if (retryBtn) {
                    retryBtn.onclick = () => {
                        this.retryCount++;
                        if (this.retryCount <= this.maxRetries) {
                            this.init();
                        } else {
                            this.showFallback();
                        }
                    };
                }
            }

            showFallback() {
                const loading = document.getElementById('vorstand-loading');
                const error = document.getElementById('vorstand-error');
                const container = document.getElementById('vorstand-container');
                const fallback = document.getElementById('vorstand-fallback');
                
                [loading, error, container].forEach(el => el?.classList.add('hidden'));
                fallback?.classList.remove('hidden');
            }
        }

        // Setup contact form
        function setupContactForm() {
            const contactForm = document.getElementById('contact-form');
            const subjectSelect = document.getElementById('contact-subject');
            
            if (contactForm && subjectSelect) {
                subjectSelect.addEventListener('change', function() {
                    toggleMembershipForm(this.value === 'Mitgliedschaft');
                });
                
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    sendContactEmail();
                });
                
                const correspondenceMethods = document.querySelectorAll('input[name="correspondence-method"]');
                correspondenceMethods.forEach(radio => {
                    radio.addEventListener('change', function() {
                        const detailsDiv = document.getElementById('correspondence-details');
                        if (this.checked) {
                            detailsDiv.classList.remove('hidden');
                            const mainRadio = document.querySelector('input[name="correspondence-address"][value="main"]');
                            if (mainRadio) mainRadio.checked = true;
                        }
                    });
                });
                
                const addressRadios = document.querySelectorAll('input[name="correspondence-address"]');
                addressRadios.forEach(radio => {
                    radio.addEventListener('change', function() {
                        const otherField = document.getElementById('other-address-field');
                        if (this.value === 'other') {
                            otherField.classList.remove('hidden');
                        } else {
                            otherField.classList.add('hidden');
                        }
                    });
                });
            }
        }

        function toggleMembershipForm(showMembership) {
            const membershipForm = document.getElementById('membership-form');
            const generalMessage = document.getElementById('general-message');
            
            if (showMembership) {
                membershipForm.classList.remove('hidden');
                generalMessage.classList.add('hidden');
            } else {
                membershipForm.classList.add('hidden');
                generalMessage.classList.remove('hidden');
            }
        }

        function sendContactEmail() {
            const name = document.getElementById('contact-name').value.trim();
            const email = document.getElementById('contact-email').value.trim();
            const subject = document.getElementById('contact-subject').value;

            if (!name || !email || !subject) {
                alert('Bitte f√ºllen Sie mindestens Name, E-Mail und Betreff aus.');
                return;
            }

            let mailtoLink, successMessage;

            if (subject === 'Mitgliedschaft') {
                const result = generateMembershipEmail(name, email);
                if (!result) return;
                mailtoLink = result.mailtoLink;
                successMessage = result.successMessage;
            } else {
                const message = document.getElementById('contact-message').value.trim();
                if (!message) {
                    alert('Bitte geben Sie eine Nachricht ein.');
                    return;
                }
                
                const result = generateGeneralEmail(name, email, subject, message);
                mailtoLink = result.mailtoLink;
                successMessage = result.successMessage;
            }

            window.location.href = mailtoLink;

            setTimeout(() => {
                alert(successMessage);
                resetContactForm();
            }, 500);
        }

        function generateMembershipEmail(name, email) {
            const lastname = document.getElementById('member-lastname').value.trim();
            const firstname = document.getElementById('member-firstname').value.trim();
            const street = document.getElementById('member-street').value.trim();
            const city = document.getElementById('member-city').value.trim();
            const phone = document.getElementById('member-phone').value.trim();
            const mobile = document.getElementById('member-mobile').value.trim();
            const memberEmail = document.getElementById('member-email-addr').value.trim();
            
            const firefighterStatus = document.querySelector('input[name="firefighter-status"]:checked');
            const correspondenceMethod = document.querySelector('input[name="correspondence-method"]:checked');
            const correspondenceAddress = document.querySelector('input[name="correspondence-address"]:checked');
            const otherAddress = document.getElementById('member-other-address').value.trim();

            const requiredFields = [lastname, firstname, street, city, phone, memberEmail];
            if (requiredFields.some(field => !field) || !firefighterStatus || !correspondenceMethod) {
                alert('Bitte f√ºllen Sie alle Pflichtfelder (*) aus.');
                return null;
            }

            const subjectLine = 'Beitrittsantrag - Feuerwehrverein Raura';
            
            const firefighterStatusText = {
                'active': 'Ja (aktiv)',
                'former': 'Ehemalige/r',
                'no': 'Nein'
            };

            const correspondenceMethodText = correspondenceMethod.value === 'post' ? 'Post' : 'E-Mail';
            
            let correspondenceDetails = '';
            if (correspondenceAddress) {
                if (correspondenceAddress.value === 'main') {
                    correspondenceDetails = correspondenceMethod.value === 'post' 
                        ? 'Hauptadresse (wie oben angegeben)'
                        : 'Haupt-E-Mail (wie oben angegeben)';
                } else if (correspondenceAddress.value === 'other' && otherAddress) {
                    correspondenceDetails = `Andere: ${otherAddress}`;
                }
            }

            const body = `Sehr geehrter Herr M√ºller,

hiermit beantrage ich die Aufnahme in den Feuerwehrverein Raura Kaiseraugst.

PERS√ñNLICHE DATEN:
Name: ${lastname}
Vorname: ${firstname}
Strasse: ${street}
PLZ und Ort: ${city}
Telefonnummer: ${phone}
${mobile ? `Mobilnummer: ${mobile}` : 'Mobilnummer: -'}
E-Mail-Adresse: ${memberEmail}

FEUERWEHR-ZUGEH√ñRIGKEIT:
Angeh√∂rige/r der Feuerwehr Raurica: ${firefighterStatusText[firefighterStatus.value]}

KORRESPONDENZ:
Zustellung der Korrespondenz: ${correspondenceMethodText}
${correspondenceDetails ? `Zustelladresse: ${correspondenceDetails}` : ''}

KONTAKT F√úR R√úCKFRAGEN:
Name: ${name}
E-Mail: ${email}

Mit freundlichen Gr√ºssen
${name}

---
Formular erstellt √ºber: www.fwv-raura.ch
Version: ${new Date().toLocaleDateString('de-DE')}`;

            const mailtoLink = `mailto:stefan+fwv-raura@juroct.ch?subject=${encodeURIComponent(subjectLine)}&body=${encodeURIComponent(body)}`;
            
            return {
                mailtoLink,
                successMessage: 'Beitrittsantrag wurde an Ihren E-Mail-Client weitergeleitet.\n\nBitte senden Sie die E-Mail an den Aktuar Stefan M√ºller ab.\n\nAktive Feuerwehr-Mitglieder werden sofort aufgenommen,\nandere Interessierte werden an der n√§chsten GV best√§tigt.'
            };
        }

        function generateGeneralEmail(name, email, subject, message) {
            const subjectLine = `Kontaktanfrage: ${subject}`;
            const body = `Hallo,

ich m√∂chte gerne Kontakt mit dem Feuerwehrverein Raura aufnehmen.

BETREFF: ${subject}

MEINE KONTAKTDATEN:
Name: ${name}
E-Mail: ${email}

NACHRICHT:
${message}

Mit freundlichen Gr√ºssen
${name}`;

            const mailtoLink = `mailto:kontakt@fwv-raura.ch?subject=${encodeURIComponent(subjectLine)}&body=${encodeURIComponent(body)}`;
            
            return {
                mailtoLink,
                successMessage: 'E-Mail-Client wurde ge√∂ffnet. Bitte senden Sie die E-Mail ab.'
            };
        }

        function resetContactForm() {
            document.getElementById('contact-name').value = '';
            document.getElementById('contact-email').value = '';
            document.getElementById('contact-subject').value = '';
            document.getElementById('contact-message').value = '';
            
            const membershipInputs = document.querySelectorAll('#membership-form input[type="text"], #membership-form input[type="email"], #membership-form input[type="tel"]');
            membershipInputs.forEach(input => input.value = '');
            
            const membershipRadios = document.querySelectorAll('#membership-form input[type="radio"]');
            membershipRadios.forEach(radio => radio.checked = false);
            
            document.getElementById('membership-form').classList.add('hidden');
            document.getElementById('general-message').classList.add('hidden');
            document.getElementById('correspondence-details').classList.add('hidden');
            document.getElementById('other-address-field').classList.add('hidden');
        }

        function setupMobileMenu() {
            const mobileMenuBtn = document.getElementById('mobile-menu-btn');
            const mobileMenu = document.getElementById('mobile-menu');
            
            if (mobileMenuBtn && mobileMenu) {
                mobileMenuBtn.addEventListener('click', () => {
                    mobileMenu.classList.toggle('hidden');
                });
            }
        }

        function setupSmoothScrolling() {
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                        const mobileMenu = document.getElementById('mobile-menu');
                        mobileMenu?.classList.add('hidden');
                    }
                });
            });
        }

        function setupLogoFallback() {
            const logos = document.querySelectorAll('img[alt*="Logo"]');
            logos.forEach((logo, index) => {
                logo.onerror = function() {
                    this.style.display = 'none';
                    const fallback = this.nextElementSibling;
                    if (fallback) {
                        fallback.style.display = 'flex';
                    }
                };
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            setupMobileMenu();
            setupSmoothScrolling();
            setupLogoFallback();
            setupContactForm();
            window.vorstandManager = new VorstandManager();
        });
    </script>
